{
  "name": "etx-electron",
  "version": "1.1.0",
  "description": "ETX远程输入工具 - Vue+Electron版本",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "electron-builder",
    "build:win": "electron-builder --win",
    "build:mac": "electron-builder --mac",
    "build:all": "electron-builder --win --mac",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [
    "etx",
    "input",
    "tool",
    "electron",
    "vue"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@nut-tree/nut-js": "^3.1.2",
    "active-win": "^8.2.1",
    "jimp": "^0.22.12",
    "koffi": "^2.15.0",
    "vue": "^3.5.13"
  },
  "devDependencies": {
    "electron": "^33.2.1",
    "electron-builder": "^25.1.8"
  },
  "build": {
    "appId": "com.etx.input-tool",
    "productName": "ETX输入工具",
    "directories": {
      "output": "dist"
    },
    "files": [
      "*.html",
      "*.js",
      "icon.png",
      "activatewin.scpt",
      "node_modules/**/*",
      "package.json"
    ],
    "win": {
      "target": "nsis",
      "icon": "icon.png"
    },
    "mac": {
      "target": "dmg",
      "icon": "icon.png",
      "category": "public.app-category.productivity"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    }
  }
}
